<div class="contents row">
  <div class="container">
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: @user, url: user_registration_path, method: :post, local: true do |f|%>
      <%= render 'layouts/error_messages', model: f.object %>
        <div class="image-field">
          <%= f.label :image %>
          <%= f.file_field :image %>
        </div>
         <div class="field">
          <div class="field-label">
            <%= f.label :full_name %>
          </div>
          <div class="field-input">
            <%= f.text_field :full_name, autofocus: true, placeholder: "", placeholder: "全角文字"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :nickname%>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :gender%>
          </div>
          <div class='gender-input'>
            <div class="male-select">
              male
              <%= f.radio_button :gender, :male %>
            </div>
            <div class="female-select">
            female
              <%= f.radio_button :gender, :female %>
            </div>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%>
       
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off", placeholder: "英数字6文字以上" %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>
        <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Birthday</label>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birth_day,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div class=field-label>
          <%= f.label :"自己紹介文" %>
        </div>
        <div class="field-input">
          <%= f.text_area :introduce %>
        </div>

        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
