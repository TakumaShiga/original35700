<div class="contents row">
 
  <% @tweets.each do |tweet| %>
    <span><%= image_tag tweet.image %></span>
      <p><%= tweet.text %></p>
    <span class="name">
      <%= tweet.user.nickname %>
    </span>  
      <ul class="more_list">
        <% if user_signed_in? %>
            <li>
              <%= link_to "詳細", tweet_path(tweet.id), method: :get %>
            </li>
           <% if current_user.id == tweet.user_id %> 
            <li>
              <%= link_to "編集", edit_tweet_path(tweet.id), method: :get %>
          </li>
          <% end %>
        <% end %>
      </ul>  
  </div>
 <% end %>   
</div>      