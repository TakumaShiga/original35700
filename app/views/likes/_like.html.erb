<% if user_signed_in?%>
  <% if current_user.already_liked?(tweet) %>
    <%= link_to tweet_likes_path(tweet), method: :delete, class: "under-line", remote: true do %>
      <i class="fas fa-heart unlike-btn"></i>
    <% end %>
  <% else %>
    <%= link_to tweet_likes_path(tweet), method: :post, class: "under-line", remote: true do %>
      <i class="fas fa-heart like-btn"></i>
    <% end %>
  <% end %>  
  <%= tweet.likes.count %>
<% end %>